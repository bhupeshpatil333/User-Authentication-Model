@model Production_ERP1.Models.Client_Registration_Model
@{
    ViewBag.Title = "PartialClient";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["ErrorImage"] != null)
{

    <script>

                     window.onload = function () {
                         var Message =' @TempData["ErrorImage"]'
                         Swal.fire({
                             icon: "error",
                             title: "Oops...",
                             text: Message,
                             footer: '<a href="#">Please Upload Image?</a>'
                         });
                     }

    </script>
}
@if (TempData["ErrorDocument"] != null)
{

    <script>

                     window.onload = function () {
                         var Message =' @TempData["ErrorDocument"]'
                         Swal.fire({
                             icon: "error",
                             title: "Oops...",
                             text: Message,
                             footer: '<a href="#">Please Upload Document?</a>'
                         });
                     }

    </script>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <img src="~/Image/Login_Images/" class="img-fluid" alt="Login Image" style="max-width: auto; height: auto;" />
        </div>

        <div class="col-md-6">
            @using (Html.BeginForm("SaveOrEdit", "Client_Registration", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                
                <div class="form-group mb-3">
                    <label>Client Name</label>
                    @Html.HiddenFor(m => m.ClientId)

                    @Html.TextBoxFor(m => m.ClientName, new { @class = "form-control", id = "ClientName" })
                    @Html.ValidationMessageFor(m => m.ClientName, "", new { @class = "text-danger" })

                </div>
                <div class="form-group mb-3">
                    <label>Client Business Name</label>
                    @Html.TextBoxFor(m => m.ClientBusiness_Name, new { @class = "form-control", id = "ClientBusiness_Name" })
                    @Html.ValidationMessageFor(m => m.ClientBusiness_Name, "", new { @class = "text-danger" })

                </div>


                <div class="form-group mb-3">
                    @*<br />*@
                    <label>Client Logo</label>
                    <input type="file" name="Logo" id="Logo" />
                    <span id="spImage"></span>
                    @*@Html.ValidationMessageFor(m => m.Profile_Image, "", new { @class = "text-danger" })*@
                </div>

                <div class="form-group mb-3">
                    <label>Client GST Number</label>
                    @Html.TextBoxFor(m => m.Client_GSTNo, new { @class = "form-control", id = "Client_GSTNo" })
                    @Html.ValidationMessageFor(m => m.Client_GSTNo, "", new { @class = "text-danger" })

                </div>
                <div class="form-group mb-3">
                    <label>Client GST Document</label>
                    <input type="file" name="Documennt" id="Documennt" />
                    @*@Html.TextBoxFor(m => m.Client_GST_Document, new { @class = "form-control", id = "Client_GST_Document" })*@
                    @Html.ValidationMessageFor(m => m.Client_GST_Document, "", new { @class = "text-danger" })

                </div>
                <div class="form-group mb-3">
                    <label>Client Contact</label>
                    @Html.TextBoxFor(m => m.Client_Contact, new { @class = "form-control", id = "Client_Contact" })
                    @Html.ValidationMessageFor(m => m.Client_Contact, "", new { @class = "text-danger" })

                </div>

                <div class="form-group text-center ">
                    <br />
                    <button type="submit" class="btn btn-success d-lg-grid" style="width: auto;">Save</button>
                </div>
            }
        </div>
    </div>
</div>
