@model Production_ERP1.Models.User_Registration_Model

@{

    ViewBag.Title = "Login";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["UserIssue"] != null)
{
    <script>
                       console.log("i am here")
                       window.onload = function () {
                           var message =' @TempData["UserIssue"]'
                           Swal.fire({
                               icon: "error",
                               title: "Oops...",
                               text: message,
                               footer: '<a href="#">Why do I have this issue?</a>'
                           });
                       }
    </script>
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <img src="~/Image/Login_Images/10.png" class="img-fluid" alt="Login Image" style="max-width: auto; height: auto;" />
        </div>

        <div class="col-md-6">
            @using (Html.BeginForm("CheckAuthentication", "Login", FormMethod.Post))
            {
                <div class="form-group mb-3">
                    <label for="Email_Id">User Email-Id</label>
                    @Html.HiddenFor(m => m.UserId)
                    @Html.TextBoxFor(m => m.Email_Id, new { @class = "form-control", @placeholder = "Enter your email" })
                    @Html.ValidationMessageFor(m => m.Email_Id, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mb-3">
                    <label for="User_Password">Password</label>
                    @Html.TextBoxFor(m => m.User_Password, new { @class = "form-control", @placeholder = "Enter your password", @type = "password" })
                    @Html.ValidationMessageFor(m => m.User_Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group text-center ">
                    <button type="submit" class="btn btn-success d-lg-grid" style="width: auto;">Login</button>
                    @*<a href="~/Views/User_Registration/UserPartial.cshtml">Register here</a>*@
                </div>
                <div class="form-group text-center mt-3">
                    <a href="@Url.Action("Index", "User_Registration")" class="btn btn-link">Register Here</a>
                </div>
            }
        </div>
    </div>
</div>
