@model Production_ERP1.Models.User_Registration_Model
@{
    ViewBag.Title = "ChangePasswordPage";
}

@********************************************************************* This is Cahnage Password Page ********************************@


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <img src="~/Image/Login_Images/ChangePasswordPNG.png" class="img-fluid" alt="Change-Password Image" style="max-width: auto; height: auto;" />
        </div>

        <div class="col-md-6">
            @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post))
            {
                @*<div class="row col-12">*@
            <div class="col-lg-6">
                <label>New Password</label>
                @Html.HiddenFor(m => m.UserId, new { @Value = @TempData["UserID"]})
                @Html.ValidationMessageFor(m => m.User_Password, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.User_Password, new { @class = "form-control", @placeholder = "Enter New password" })
            </div>
            <div class="col-lg-6">
                <label>Confirm Password</label>
                @Html.ValidationMessageFor(m => m.User_Password, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.User_Password, new { @class = "form-control", @placeholder = "Enter Confirm password" })
            </div>
                <div class="col-lg-12">
                    <br />
                    <button type="submit" class="btn btn-primary">Change Password</button>
                </div>
                @*</div>*@
            }
        </div>
    </div>
</div>