 @if (TempData["ErrorImage"] != null)
{

    <script>
                     
                     window.onload = function () {
                         var Message =' @TempData["ErrorImage"]'
                         Swal.fire({
                             icon: "error",
                             title: "Oops...",
                             text: Message,
                             footer: '<a href="#">Please Upload Image?</a>'
                         });
                     }

    </script>
}

@*<h2>UserPartial</h2>*@
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <img src="~/Image/Login_Images/Register.png" class="img-fluid" alt="Login Image" style="max-width: auto; height: auto;" />
        </div>

        <div class="col-md-6">
            @using (Html.BeginForm("SignUp", "User_Registration", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group mb-3">
                    <label>First Name</label>
                    @Html.HiddenFor(m => m.UserId)
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", id = "firstname" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })

                </div>
                <div class="form-group mb-3">
                    <label>Last Name</label>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", id = "lastname" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })

                </div>
                <div class="form-group mb-3">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.Email_Id, new { @class = "form-control", id = "emailId" })
                    @Html.ValidationMessageFor(m => m.Email_Id, "", new { @class = "text-danger" })

                </div>
                <div class="form-group mb-3">
                    @*<br />*@
                    <label>Profile Pic</label>
                    <input type="file" name="Image" id="Image" />
                    <span id="spImage"></span>
                    @*@Html.ValidationMessageFor(m => m.Profile_Image, "", new { @class = "text-danger" })*@
                </div>
                <div class="form-group text-center ">
                    <br />
                    <button type="submit" class="btn btn-success d-lg-grid" style="width: auto;">Sign Up</button>

                </div>
            }
        </div>
    </div>
</div>
