@model Production_ERP1.Models.Tax_Model
@{
    ViewBag.Title = "PartialTax";
}

<h2>Enter Tax</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <img src="~/Image/Login_Images/" class="img-fluid" alt="Login Image" style="max-width: auto; height: auto;" />
        </div>

        <div class="col-md-6">
            @using (Html.BeginForm("SaveOrEdit", "Tax", FormMethod.Post))
            {

                <div class="form-group mb-3">
                    <label>Tax Name</label>
                    @Html.HiddenFor(m => m.Tax_Id)

                    @Html.TextBoxFor(m => m.Tax_Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Tax_Name, "", new { @class = "text-danger" })

                </div>

                <div class="form-group mb-3">
                    <label>Tax Percentage</label>
                    @Html.TextBoxFor(m => m.Tax_Percentage, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Tax_Percentage, "", new { @class = "text-danger" })
                </div>

                

                <div class="form-group text-center ">
                    <br />
                    <button type="submit" class="btn btn-success d-lg-grid" style="width: auto;">Save</button>
                </div>
            }
        </div>
    </div>
</div>
